<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:theme="@style/AppTheme">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="291dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/holtwood_one_sc"
        android:gravity="center"
        android:text="Design by Nicola Bortolan"
        android:textColor="#ffffff"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/btnSpegni"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_marginBottom="84dp"
        android:layout_marginEnd="66dp"
        android:layout_marginStart="54dp"
        android:fontFamily="@font/holtwood_one_sc"
        android:gravity="center"
        android:text="Telecomando"
        android:textColor="#ffffff"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btnDestra"
        app:layout_constraintEnd_toStartOf="@+id/btnGas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/btnSinistra"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="@drawable/button"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="41dp"
        android:layout_marginStart="53dp"
        android:adjustViewBounds="false"
        android:backgroundTint="@android:color/white"
        android:cropToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDestra"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/leftarrow" />

    <ImageButton
        android:id="@+id/btnDestra"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="@drawable/button"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="127dp"
        android:backgroundTint="?attr/colorBackgroundFloating"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnFreno"
        app:layout_constraintStart_toEndOf="@+id/btnSinistra"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/rightarrow" />

    <ImageButton
        android:id="@+id/btnFreno"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/button"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="71dp"
        android:backgroundTint="?attr/colorBackgroundFloating"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnDestra"
        app:layout_constraintTop_toBottomOf="@+id/btnSpegni"
        app:srcCompat="@drawable/freno" />

    <ImageButton
        android:id="@+id/btnGas"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/button"
        android:layout_marginBottom="45dp"
        android:layout_marginEnd="72dp"
        android:layout_marginTop="61dp"
        android:backgroundTint="?attr/colorBackgroundFloating"
        app:layout_constraintBottom_toTopOf="@+id/btnFreno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gas" />

    <ImageButton
        android:id="@+id/btnSpegni"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/button"
        android:layout_marginBottom="132dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btnFreno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_lock_power_off" />

</android.support.constraint.ConstraintLayout>